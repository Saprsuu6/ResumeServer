{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "SaprLand API"
  },
  "tags": [
    {
      "name": "Crypto",
      "description": "Cryptocurrency API"
    },
    {
      "name": "TebiIo",
      "description": "Tebi.io Storage API"
    }
  ],
  "paths": {
    "/getCryptoInfo": {
      "get": {
        "tags": ["Crypto"],
        "summary": "Get all cryptos",
        "description": "Get all cryptos",
        "responses": {
          "200": {
            "description": "Successful getting all cryptos",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Coins"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Error"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/uploadImgToTebiIo": {
      "post": {
        "tags": ["TebiIo"],
        "summary": "Upload multiple images to Tebi.io",
        "description": "Endpoint for uploading multiple image files to Tebi.io storage.",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "image": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "binary"
                    },
                    "description": "The array of image files to upload."
                  },
                  "OWNER_PASSWORD": {
                    "type": "string",
                    "description": "The password required to authorize the upload."
                  }
                },
                "required": ["image", "OWNER_PASSWORD"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful upload of the images",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "uris": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "description": "The URIs of the uploaded images."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Need at least one file",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Error message."
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Forbidden. Invalid OWNER_PASSWORD."
          },
          "500": {
            "description": "Internal error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Error message."
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Coin": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "usd": {
            "type": "number"
          },
          "usd_24h_change": {
            "type": "number"
          }
        }
      },
      "Coins": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Coin"
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}
